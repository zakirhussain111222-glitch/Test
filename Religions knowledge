<button type="button" onclick="submitQuiz()">Submit Test</button>
</form>

<div id="score"></div>

<script>
  const answers = {
    "q1":"C","q2":"B","q3":"B","q4":"D","q5":"A",
    "q6":"C","q7":"B","q8":"B","q9":"B","q10":"B",
    "q11":"D","q12":"C","q13":"A","q14":"B","q15":"A",
    "q16":"B","q17":"B","q18":"B","q19":"A","q20":"C"
    // … continue for q21 to q100 …
  };

  function submitQuiz(){
    let totalScore = 0;
    for(let i=1; i<=100; i++){
      const key = "q" + i;
      const qDiv = document.getElementById(key);
      if (!qDiv) continue;
      qDiv.classList.remove("correct","incorrect");
      const sel = document.querySelector(`input[name=${key}]:checked`);
      if (sel) {
        if (sel.value === answers[key]) {
          totalScore += 1;
          qDiv.classList.add("correct");
        } else {
          qDiv.classList.add("incorrect");
        }
      } else {
        qDiv.classList.add("incorrect");
      }
    }
    document.getElementById("score").innerText = "आपका कुल अंक: " + totalScore + " / 100";
  }
</script>

